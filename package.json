{
  "name": "kovid_bot",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon --ignore build/ --exec ts-node src/index.ts",
    "build": "rm -rf build && tsc && cp -r src/images build",
    "start": "node ./build/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/express": "^4.17.5",
    "@types/lodash": "^4.14.149",
    "axios": "^0.19.2",
    "dedent": "^0.7.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "telegraf": "^3.37.0"
  },
  "devDependencies": {
    "@types/dedent": "^0.7.0",
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
